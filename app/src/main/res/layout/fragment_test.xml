<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.TestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/testText"
            android:layout_width="207dp"
            android:layout_height="27dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/test_text_view"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="202dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/test_button"
            app:layout_constraintEnd_toEndOf="@+id/testText"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/testText"
            app:layout_constraintTop_toBottomOf="@+id/testInput" />

        <EditText
            android:id="@+id/testInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="@string/test_input_view"
            app:layout_constraintEnd_toEndOf="@+id/testText"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="@+id/testText"
            app:layout_constraintTop_toBottomOf="@+id/testText" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>